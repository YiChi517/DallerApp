<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 禁用狀態 -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#D3D3D3" /> <!-- 淺灰色 -->
            <corners android:radius="10dp" />
            <padding android:top="12dp" android:bottom="12dp" android:left="12dp" android:right="12dp" />
        </shape>
    </item>
    <!-- 默認狀態 -->
    <item android:state_enabled="true">
        <shape
            android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- 白色 -->
            <corners android:radius="10dp" />
            <padding android:bottom="12dp" android:left="12dp" android:right="12dp" android:top="12dp" />
        </shape>
    </item>
</selector>
