<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#231F1E">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Level 1 -->
        <Button
            android:id="@+id/level1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/section_btm_gray"
            android:paddingBottom="15dp"
            android:text="1"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/little_title"
            app:layout_constraintTop_toBottomOf="@+id/little_title" />

        <!-- Level 2 -->
        <Button
            android:id="@+id/level2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="68dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/section_btm_gray"
            android:paddingBottom="15dp"
            android:text="2"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/level1"
            app:layout_constraintTop_toBottomOf="@id/level1" />

        <!-- Level 3 -->
        <Button
            android:id="@+id/level3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="72dp"
            android:layout_marginEnd="52dp"
            android:background="@drawable/section_btm_gray"
            android:paddingBottom="15dp"
            android:text="3"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/level2"
            app:layout_constraintTop_toBottomOf="@id/level2" />

        <!-- Level 4 -->
        <Button
            android:id="@+id/level4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="64dp"
            android:background="@drawable/section_btm_gray"
            android:paddingBottom="15dp"
            android:text="4"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/level3"
            app:layout_constraintTop_toBottomOf="@id/level3" />

        <!-- Level 5 -->

        <!-- Level 6 -->
        <Button
            android:id="@+id/level5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:background="@drawable/section_btm_gray"
            android:paddingBottom="15dp"
            android:text="5"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/level4"
            app:layout_constraintTop_toBottomOf="@id/level4" />

        <Button
            android:id="@+id/level6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="72dp"
            android:background="@drawable/section_btm_gray"
            android:paddingBottom="15dp"
            android:text="6"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/level5"
            app:layout_constraintTop_toBottomOf="@id/level5" />

        <!-- Level 7 -->

        <!-- Level 8 -->

        <Button
            android:id="@+id/level7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/section_btm_gray"
            android:paddingBottom="15dp"
            android:text="7"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/level6"
            app:layout_constraintTop_toBottomOf="@id/level6" />

        <Button
            android:id="@+id/level8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:background="@drawable/section_btm_gray"
            android:paddingBottom="15dp"
            android:text="8"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/level7"
            app:layout_constraintTop_toBottomOf="@id/level7" />

        <!-- Level 9 -->
        <Button
            android:id="@+id/level9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:background="@drawable/section_btm_gray"
            android:paddingBottom="15dp"
            android:text="9"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/level8"
            app:layout_constraintTop_toBottomOf="@id/level8" />

        <!-- Level 10 -->
        <Button
            android:id="@+id/level10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/section_btm_gray"
            android:paddingBottom="15dp"
            android:text="10"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/level9"
            app:layout_constraintTop_toBottomOf="@id/level9"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/little_title"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/login_textinput_4"
            android:text="基本金融知識"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>